{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": "./",
    "paths": {
      "src": ["./src/*"]
    },
    "jsx": "react-jsx",
    "typeRoots": ["./src/react-app-env.d.ts", "./src/types.d.ts"] // 解决.d.ts无效问题
  },
  // "include": ["/**/*.ts", "/**/*.tsx"],
  "include": ["**/*.tsx", "**/*.ts"],
  "exclude": [
    "node_modules",
    "build",
    "src/**/*.test.tsx",
    "src/**/*.stories.tsx",
    "src/setupTests.ts"
  ]
}
